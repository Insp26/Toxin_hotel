mixin room(options)
    - let {name, id1, id2, id3, id4, url1, url2, url3, url4, room_num, room_type, room_price, feedback_value} = options
    .room
        .room-slider
            input.room-slider__input(type="radio" id=id1 name=name checked)
            input.room-slider__input(type="radio" id=id2 name=name)
            input.room-slider__input(type="radio" id=id3 name=name)
            input.room-slider__input(type="radio" id=id4 name=name)
            .room-slider__controls
                label.room-slider__label(for=id1)
                label.room-slider__label(for=id2)
                label.room-slider__label(for=id3)
                label.room-slider__label(for=id4)
            .room-slider__buttons
                button.room-slider__back-button expand_more
                button.room-slider__forward-button expand_more
            .room-slider__inner
                .room-slider__slides
                    img.room-slider__img(src=url1, alt="")
                    img.room-slider__img(src=url2, alt="")
                    img.room-slider__img(src=url3, alt="")
                    img.room-slider__img(src=url4, alt="")
        .room-info
            .room__specc
                    h2 № #{room_num}
                    span #{room_type}
                    p <b>#{room_price}</b> в сутки
            .room__rating
                +rate("room-rating")
                if feedback_value=== '1'
                    p <b>#{feedback_value}</b> Отзыв
                else if feedback_value=== '2'
                    p <b>#{feedback_value}</b> Отзыва
                else if feedback_value=== '3'
                    p <b>#{feedback_value}</b> Отзыва
                else if feedback_value=== '4'
                    p <b>#{feedback_value}</b> Отзыва
                else
                    p <b>#{feedback_value}</b> Отзывов