mixin room-dropdown(title, description, value)
    .room-dropdown
        span.room-dropdown__description= description
        label(for="room-dropdown-input" class="room-dropdown__label")= title
        .room-dropdown__body
            input(id="room-dropdown-input" class="room-dropdown__input" type="text" value=value readonly)
            button(id="room-dropdown-button" class="room-dropdown__button" type="button" onclick="showHideRoomDropdown()") keyboard_arrow_down
            ul(id="room-dropdown-content" class="room-dropdown__input-show" style="display:none")
                li
                    h3 спальни
                    .room-dropdown__input__counter
                        button(id="room-dropdown__minus-button" type="button" class="button__minus" onclick="countMinus()") -
                        span(id="count") 0
                        button(id="room-dropdown__plus-button" type="button" class="button__plus" onclick="countPlus()") +
                li
                    h3 кровати
                    .room-dropdown__input__counter
                        button(id="room-dropdown__minus-button" type="button" class="button__minus" onclick="countMinus()") -
                        span(id="count") 0
                        button(id="room-dropdown__plus-button" type="button" class="button__plus" onclick="countPlus()") +
                li
                    h3 ванные комнаты
                    .room-dropdown__input__counter
                        button(id="room-dropdown__minus-button" type="button" class="button__minus" onclick="countMinus()") -
                        span(id="count") 0
                        button(id="room-dropdown__plus-button" type="button" class="button__plus" onclick="countPlus()") +
                .room-dropdown__footer
                    +button('unbordered-gray', '#!', 'очистить')
                    +button('unbordered-purple', '#!', 'применить')

script
    include room-dropdown.js